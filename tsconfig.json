{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "types": ["@types/chrome", "node"],
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "skipLibCheck": true,
    "paths": {
      "lib-models/*": ["lib/models/*"],
      "lib-utils/*": ["lib/utils/*"],
      "lib-components/*": ["lib/components/*"],
      "lib-context/*": ["lib/context/*"]
    }
  },
  "include": ["src", "typings.d.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
