{
  "name": "browser-ext-storage-x",
  "version": "0.0.8",
  "displayName": "StorageX",
  "description": "StorageX extension is a toolset to manage any/all browser tab's Application Storage",
  "author": "Rahul Kurup <raulsrule@gmail.com>",
  "private": true,
  "bugs": {
    "email": "me@rahulkurup.com"
  },
  "engines": {
    "node": ">=16.18.0",
    "yarn": "1.22.19"
  },
  "volta": {
    "node": "16.18.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "husky install",
    "postinstall": "npm run init:profile",
    "init:profile": "mkdirp tmp/profile/chrome tmp/profile/brave tmp/profile/firefox",
    "prebuild": "npm run clean",
    "compress": "node scripts/compress.mjs",
    "build": "cross-env NODE_ENV=production webpack && yarn compress",
    "build:local": "cross-env NODE_ENV=development webpack",
    "build:chrome": "cross-env NODE_ENV=development webpack --config ./webpack/chrome.js",
    "build:firefox": "cross-env NODE_ENV=development webpack --config ./webpack/firefox.js",
    "build:safari": "cross-env NODE_ENV=development webpack --config ./webpack/safari.js && xcrun safari-web-extension-converter dist/safari-prebuild --project-location dist/safari --force --no-open && rimraf safari-prebuild",
    "watch": "yarn clean && cross-env NODE_ENV=development webpack -w",
    "watch:chrome": "cross-env NODE_ENV=development webpack --config ./webpack/chrome.js -w",
    "watch:firefox": "cross-env NODE_ENV=development webpack --config ./webpack/firefox.js -w",
    "watch:safari": "npm run init:safari && cross-env NODE_ENV=development webpack --config ./webpack/safari.js -w",
    "reload:chrome": "web-ext --source-dir=dist/chrome run -t chromium --chromium-binary  /Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome --start-url example.com --chromium-profile tmp/profile/chrome --profile-create-if-missing --keep-profile-changes",
    "reload:brave": "web-ext --source-dir=dist/chrome run -t chromium --chromium-binary /Applications/Brave\\ Browser.app/Contents/MacOS/Brave\\ Browser --start-url example.com --chromium-profile tmp/profile/brave --profile-create-if-missing --keep-profile-changes",
    "reload:firefox": "web-ext --source-dir=dist/firefox run --start-url example.com --firefox-profile tmp/profile/firefox --profile-create-if-missing --keep-profile-changes",
    "start:chrome": "concurrently npm:watch:chrome npm:reload:chrome",
    "start:brave": "concurrently npm:watch:chrome npm:reload:brave",
    "start:firefox": "concurrently npm:watch:firefox npm:reload:firefox",
    "start": "concurrently npm:watch:chrome npm:reload:brave npm:watch:firefox npm:reload:firefox",
    "pretty": "prettier --loglevel=error --write ."
  },
  "lint-staged": {
    "*": "prettier --loglevel=error --write"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mantine/core": "^5.7.1",
    "@mantine/hooks": "^5.7.1",
    "emotion": "^11.0.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.20.2",
    "@emotion/babel-plugin": "^11.10.5",
    "@types/chrome": "^0.0.200",
    "@types/lodash": "^4.14.188",
    "@types/react-dom": "^18.0.8",
    "@types/webextension-polyfill": "^0.9.1",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "concurrently": "^7.5.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^9.0.0",
    "generate-json-from-js-webpack-plugin": "^0.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mkdirp": "^1.0.4",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "web-ext": "^7.3.1",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0",
    "webpack-shell-plugin-next": "^2.3.1",
    "zip-lib": "^0.7.3"
  }
}
